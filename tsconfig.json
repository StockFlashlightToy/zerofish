{
  "include": ["src/*.ts", "src/test/*.ts"],
  "exclude": [],
  
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "types": ["node", "web"]
  }
}